{
  "extends": "../../tsconfig-base.json",
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["esnext"],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": false,
    "sourceMap": true,
  },
  "references": [
    { "path": "../apollo-common" },
    { "path": "../apollo-schemas" },
    { "path": "../apollo-shared" },
  ],
}
