    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "passport-microsoft": "^1.0.0",
    "pm2": "^5.3.0",
    "prop-types": "^15.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.4.0",
    "sanitize-filename": "^1.6.3",
    "socket.io": "^4.5.3",
    "stream-concat": "^1.0.0",
    "tslib": "^2.3.1",
    "tss-react": "^4.6.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.10",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.1.0",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1",
    "@types/jest": "^27.0.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.11.9",
